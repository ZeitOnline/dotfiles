{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "dependencyDashboard": true,

  "enabledManagers": [
    "github-actions",
    "asdf"
  ],

  "schedule": [
    "every weekend"
  ],

  "asdf": {
    "fileMatch": ["(^|/|\\.)dot_tool-versions$"]
  },

  "packageRules": [
    {
      "description": "schedule asdf manager for maintenance day",
      "matchManagers": ["asdf"],
      "schedule": ["before 5am on the first day of the month"],
      "addLabels": ["maintenance-day"]
    },
    {
      "description": "restrict kubectl updates",
      "matchManagers": ["asdf"],
      "matchPackageNames": ["kubectl"],
      "allowedVersions": "<=1.24"
    },
    {
      "description": "Add label for terraform/grunt binary",
      "matchManagers": ["regex"],
      "matchPackageNames": ["hashicorp/terraform", "gruntwork-io/terragrunt"],
      "addLabels": ["terraform-bin"]
    }
  ]
}
