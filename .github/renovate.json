{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "dependencyDashboard": true,

  "enabledManagers": ["github-actions", "regex"],

  "schedule": [
    "every weekend"
  ],

  "regexManagers": [
    {
      "description": "Update commented tool-versions",
      "fileMatch": [
        "(^|/|\\.)dot_tool-versions$"
      ],
      "matchStrings": [
        "#\\s?renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?( extractVersion=(?<extractVersion>.+?))?\\s(?:\\S)+ (?<currentValue>.*)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver-coerced{{/if}}",
      "extractVersionTemplate": "{{#if extractVersion}}{{{extractVersion}}}{{else}}^v?(?<version>.+)${{/if}}"
    }
  ],
  "packageRules": [
    {
      "description": "schedule regexManager for maintenance day",
      "matchManagers": ["regex"],
      "schedule": ["before 5am on the first day of the month"],
      "addLabels": ["maintenance-day"]
    },
    {
      "description": "restrict kubectl updates",
      "matchManagers": ["regex"],
      "matchPackageNames": ["kubernetes/kubernetes"],
      "allowedVersions": "<=1.24"
    }
  ]
}
